<div class="row">
  <aside class="col-lg-4">
    <div class="card border-info p-4 mt-4">
      <div class="card-body">
        <section class="user_info card-text">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats card-text">
          <%= render 'shared/stats' %>
        </section>
        <section class="micropost_form card-text">
          <%= render 'shared/micropost_form' %>
        </section>
      </div>
    </div>
  </aside>
  <div class="col-lg-8">
    <h3>Micropost Feed</h3>

    <!--検索拡張機能  -->
    <p>content serch</p>
    <%= form_tag root_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %> 
    <%= render 'shared/feed' %>
  </div>
</div>